	"devDependencies": {
		"@eslint/js": "^9.21.0",
		"eslint": "^9.21.0",
		"globals": "^16.0.0",
		"tsup": "^8.4.0",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.25.0",
		"vitest": "^3.0.7"
